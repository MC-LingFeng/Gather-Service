{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "allowJs": true,
    // "skipLibCheck": true,
    "moduleResolution": "Node",
    "importHelpers": true,
    "noEmit": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
}
